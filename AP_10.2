void bubbleSort(int arr[], int n)

{

int i = 0, j = 0;

for (i = 0; i < n - 1; i++)

for (j = 0; j < n - i - 1; j++)

if (arr[j] > arr[j + 1])

swap(arr[j], arr[j + 1]);

}

int search(int array[], int n, int x) {

for (int i = 0; i < n; i++)

if (array[i] == x)

return i;

return -1;

}

